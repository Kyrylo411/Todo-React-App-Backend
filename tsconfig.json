{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es6"],
    "outDir": "dist",
    "allowJs": true,
    "rootDir": "src",
    "baseUrl": ".",
    "module": "commonJS",
    "target": "ES6",
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
